<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/text0"
        android:text="Enter New Contact Info"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/entryFrame0"
        android:layout_above="@id/buttonFrame0"
        android:layout_below="@id/text0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginVertical="45dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical">
        
        <EditText
            android:id="@+id/entry0"
            android:hint="Name"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"/>
        
        <EditText
            android:id="@+id/entry1"
            android:hint="Phone Number"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"/>
        
        <EditText
            android:id="@+id/entry2"
            android:hint="Email"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"/>

        <EditText
            android:id="@+id/entry3"
            android:hint="Address"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"/>

        <EditText
            android:id="@+id/entry4"
            android:hint="Relationship"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonFrame0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/button0"
            android:text="Cancel"
            android:textSize="25sp"
            android:onClick="toMain"
            android:layout_weight="1"
            android:padding="45dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        
        <Button
            android:id="@+id/button1"
            android:text="Enter"
            android:textSize="25sp"
            android:onClick="enterContact"
            android:layout_weight="1"
            android:padding="45dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>